{{#each errors}}
    <div class="alert alert-danger">
        {{text}}
    </div>
{{else}}
{{/each}}


<h3 style="color: #303030">Create New Category:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/newcategory" method="post">
            <label for="name">Name: </label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Category Name" required="required"/>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" class="form-control mt-2" placeholder="Slug da Categoria" required="required"/>
            <button type="submit" class="btn btn-success mt-2"> Add Category </button>
        </form>
    </div>
</div>